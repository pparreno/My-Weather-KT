<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="5dp">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:id="@+id/main_content_layout"
        android:orientation="vertical"
        android:background="@color/colorHot"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView android:layout_height="@dimen/fav_button_size"
                android:layout_width="@dimen/fav_button_size"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_favorite_filled"
                android:id="@+id/favorite_icon"/>

            <TextView android:layout_height="match_parent" android:layout_width="wrap_content"
                android:text="@string/placeholder_text_temp"
                android:id="@+id/temp_text"
                android:textSize="18sp"
                android:gravity="center_vertical"/>

            <ImageView android:layout_height="45dp" android:layout_width="45dp"
                android:layout_toEndOf="@id/temp_text"
                android:layout_marginStart="15dp"
                android:elevation="5dp"
                android:src="@drawable/ic_weather_placeholder"
                android:id="@+id/weather_icon"/>

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView android:layout_height="match_parent" android:layout_width="wrap_content"
                android:text="@string/city_placeholder_text"
                android:id="@+id/city_text"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="center_vertical"/>

            <TextView android:layout_height="match_parent" android:layout_width="wrap_content"
                android:text="@string/weather_placeholder_text"
                android:id="@+id/weather_text"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:gravity="center_vertical"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>